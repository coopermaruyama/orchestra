{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "mcp__ide__getDiagnostics",
      "Bash(pip install:*)",
      "Bash(python:*)",
      "Bash(orchestra plancheck:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/dev.py"
          }
        ]
      }
    ]
  }
}