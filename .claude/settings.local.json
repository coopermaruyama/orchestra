{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "mcp__ide__getDiagnostics",
      "Bash(mkdir:*)",
      "Bash(python3:*)",
      "Bash(rm:*)",
      "Bash(pytest:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(mypy:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/orchestra/task-monitor/task_monitor.py hook PreToolUse"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/orchestra/task-monitor/task_monitor.py hook PostToolUse"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/orchestra/task-monitor/task_monitor.py hook UserPromptSubmit"
          }
        ]
      }
    ]
  }
}